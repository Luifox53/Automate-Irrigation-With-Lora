<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
    
    <style>
        .valve-control-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            margin-bottom: 1.5rem;
        }
        
        .valve-control-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }
        
        .valve-status-open {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
        }
        
        .valve-status-closed {
            background: linear-gradient(135deg, #dc3545 0%, #fd7e14 100%);
            color: white;
        }
        
        .control-button {
            border-radius: 10px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
            border: none;
            margin: 0.25rem;
        }
        
        .control-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }
        
        .quick-controls {
            background: linear-gradient(135deg, #6f42c1 0%, #e83e8c 100%);
            color: white;
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 2rem;
        }
        
        .sensor-data {
            font-size: 0.9rem;
            color: #6c757d;
        }
        
        .region-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
            margin-top: 2rem;
        }
        
        .emergency-stop {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            border: none;
            color: white;
            font-weight: 700;
            font-size: 1.1rem;
            padding: 1rem 2rem;
            border-radius: 15px;
            transition: all 0.3s ease;
        }
        
        .emergency-stop:hover {
            background: linear-gradient(135deg, #c82333 0%, #a71e2a 100%);
            transform: scale(1.05);
            box-shadow: 0 8px 25px rgba(220, 53, 69, 0.3);
        }
        
        .status-indicator {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 0.5rem;
        }
        
        .status-online {
            background-color: #28a745;
            box-shadow: 0 0 10px rgba(40, 167, 69, 0.5);
        }
        
        .status-offline {
            background-color: #dc3545;
            box-shadow: 0 0 10px rgba(220, 53, 69, 0.5);
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <i class="fas fa-seedling me-2"></i>
                Otonom Sulama Sistemi
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/dashboard">
                            <i class="fas fa-tachometer-alt me-1"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/valve-control">
                            <i class="fas fa-cogs me-1"></i>
                            Valf Kontrolü
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/scheduler">
                            <i class="fas fa-clock me-1"></i>
                            Zamanlayıcı
                        </a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i>
                            <%= user.name %>
                            <span class="badge bg-warning text-dark ms-1">Admin</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#"><i class="fas fa-user-cog me-2"></i>Profil</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form action="/auth/logout" method="POST" class="d-inline">
                                    <button type="submit" class="dropdown-item">
                                        <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="container-fluid mt-4">
        <!-- Quick Controls -->
        <div class="quick-controls">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h2 class="mb-2">
                        <i class="fas fa-cogs me-3"></i>
                        Valf Kontrol Paneli
                    </h2>
                    <p class="mb-0 opacity-75">Tüm bölgelerin valf durumlarını kontrol edin ve yönetin</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <div class="d-flex flex-wrap justify-content-md-end gap-2">
                        <button class="btn btn-success control-button" onclick="openAllValves()">
                            <i class="fas fa-unlock me-2"></i>
                            Tümünü Aç
                        </button>
                        <button class="btn btn-warning control-button" onclick="closeAllValves()">
                            <i class="fas fa-lock me-2"></i>
                            Tümünü Kapat
                        </button>
                        <button class="btn btn-info control-button" onclick="refreshData()">
                            <i class="fas fa-sync-alt me-2"></i>
                            Yenile
                        </button>
                        <button class="emergency-stop" onclick="emergencyStop()">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            ACİL DURDUR
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- System Status -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card valve-control-card">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="fas fa-wifi me-2"></i>
                            Sistem Durumu
                        </h6>
                        <div class="d-flex align-items-center">
                            <span class="status-indicator status-online"></span>
                            <span class="text-success fw-bold">Çevrimiçi</span>
                            <span class="ms-auto text-muted" id="lastUpdate">Son güncelleme: --:--</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card valve-control-card">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Otomatik Yenileme
                        </h6>
                        <div class="d-flex align-items-center">
                            <button class="btn btn-sm btn-success" id="autoRefreshBtn" onclick="toggleAutoRefresh()">
                                <i class="fas fa-pause"></i> Durdur
                            </button>
                            <span class="ms-auto text-muted">Her 30 saniyede bir</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Valve Control Grid -->
        <div class="region-grid" id="valveGrid">
            <!-- Bölge kartları JavaScript ile doldurulacak -->
        </div>
    </div>
    
    <!-- Footer -->
    <footer class="bg-light text-center text-muted py-3 mt-5">
        <div class="container">
            <p class="mb-0">
                &copy; 2024 Otonom Sulama Sistemi. Tüm hakları saklıdır.
                <span class="ms-3">
                    <i class="fas fa-wifi text-success me-1"></i>
                    Sistem Aktif
                </span>
            </p>
        </div>
    </footer>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/main.js"></script>
    
    <script>
        // Sayfa yüklendiğinde valf verilerini getir
        document.addEventListener('DOMContentLoaded', function() {
            loadValveData();
            updateLastRefreshTime();
        });
        
        // Valf verilerini yükle
        function loadValveData() {
            fetch('/api/regions')
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.regions) {
                        renderValveCards(data.regions);
                    } else {
                        console.error('Veri formatı hatalı:', data);
                        showNotification('Veri yüklenirken hata oluştu', 'danger');
                    }
                })
                .catch(error => {
                    console.error('Veri yükleme hatası:', error);
                    showNotification('Veri yüklenirken hata oluştu', 'danger');
                });
        }
        
        // Valf kartlarını oluştur
        function renderValveCards(regions) {
            const grid = document.getElementById('valveGrid');
            grid.innerHTML = '';
            
            regions.forEach(region => {
                const card = createValveCard(region);
                grid.appendChild(card);
            });
        }
        
        // Tek bir valf kartı oluştur
        function createValveCard(region) {
            const cardDiv = document.createElement('div');
            cardDiv.className = 'valve-control-card';
            cardDiv.setAttribute('data-region-id', region.id);
            
            const valveStatusClass = region.valveOpen ? 'valve-status-open' : 'valve-status-closed';
            const valveIcon = region.valveOpen ? 'fa-unlock' : 'fa-lock';
            const valveText = region.valveOpen ? 'AÇIK' : 'KAPALI';
            const toggleButtonClass = region.valveOpen ? 'btn-warning' : 'btn-success';
            const toggleButtonText = region.valveOpen ? 'Kapat' : 'Aç';
            const toggleButtonIcon = region.valveOpen ? 'fa-lock' : 'fa-unlock';
            
            cardDiv.innerHTML = `
                <div class="card h-100">
                    <div class="card-header ${valveStatusClass} text-center">
                        <h5 class="mb-0">
                            <i class="fas ${valveIcon} me-2"></i>
                            ${region.name}
                        </h5>
                        <div class="mt-2">
                            <span class="badge bg-light text-dark fs-6">${valveText}</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row text-center mb-3">
                            <div class="col-4">
                                <div class="sensor-data">
                                    <i class="fas fa-thermometer-half text-danger"></i>
                                    <div class="fw-bold">${region.temperature}°C</div>
                                    <small>Sıcaklık</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="sensor-data">
                                    <i class="fas fa-tint text-info"></i>
                                    <div class="fw-bold">${region.humidity}%</div>
                                    <small>Nem</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="sensor-data">
                                    <i class="fas fa-seedling text-success"></i>
                                    <div class="fw-bold">${region.soilMoisture}%</div>
                                    <small>Toprak Nemi</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button class="btn ${toggleButtonClass} control-button" onclick="toggleValve(${region.id})">
                                <i class="fas ${toggleButtonIcon} me-2"></i>
                                Valfi ${toggleButtonText}
                            </button>
                            <button class="btn btn-outline-info btn-sm" onclick="showRegionDetails(${region.id})">
                                <i class="fas fa-chart-line me-2"></i>
                                Detayları Görüntüle
                            </button>
                        </div>
                        
                        <div class="mt-3 text-center">
                            <small class="text-muted">
                                <i class="fas fa-clock me-1"></i>
                                Son güncelleme: ${new Date(region.lastUpdate).toLocaleTimeString('tr-TR')}
                            </small>
                        </div>
                    </div>
                </div>
            `;
            
            return cardDiv;
        }
        
        // Bölge detaylarını göster
        function showRegionDetails(regionId) {
            // Dashboard sayfasına yönlendir
            window.open(`/dashboard/region/${regionId}`, '_blank');
        }
        
        // Veri yenileme fonksiyonu (main.js'den override)
        function refreshData() {
            showLoading('Veriler yenileniyor...');
            loadValveData();
            updateLastRefreshTime();
            hideLoading();
            showNotification('Veriler başarıyla yenilendi', 'success');
        }
        
        // Valf durumunu değiştir
        function toggleValve(regionId) {
            fetch(`/api/valve/${regionId}/toggle`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification(`Bölge ${regionId} valfi ${data.valveOpen ? 'açıldı' : 'kapatıldı'}`, 'success');
                    loadValveData(); // Verileri yenile
                } else {
                    showNotification('Valf kontrolünde hata oluştu', 'danger');
                }
            })
            .catch(error => {
                console.error('Valf kontrol hatası:', error);
                showNotification('Valf kontrolünde hata oluştu', 'danger');
            });
        }
        
        // Son güncelleme zamanını güncelle
        function updateLastRefreshTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('tr-TR');
            const lastUpdateElement = document.getElementById('lastUpdate');
            if (lastUpdateElement) {
                lastUpdateElement.textContent = `Son güncelleme: ${timeString}`;
            }
        }
    </script>
</body>
</html>